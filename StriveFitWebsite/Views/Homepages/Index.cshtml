@model IEnumerable<StriveFitWebsite.Models.Homepage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="content">
    <h1>Home</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sectionname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imageurl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descriptions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sectionname)
                </td>
                <td>
                        <img src=@Url.Content("~/Images/" + item.Imageurl) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Headings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Pageid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Pageid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Pageid">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>