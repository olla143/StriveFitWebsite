@model StriveFitWebsite.Models.User
@{
    ViewData["Title"] = "Profile Page";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg spad" data-setbg="/HomeDesign/img/about-bread.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>@ViewBag.Profile <span>Profile</span></h2>
                    <div class="breadcrumb-controls">
                        <a asp-action="Index" asp-controller="Home"><i class="fa fa-home"></i> Home</a>
                        <span>Profile</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb End -->

<section class="contact-section spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="profile-card">
                    <div class="profile-header">
                        <img src="@Url.Content("~/Images/" + Model.Imagepath)" asp-append-version="true" alt="Profile Image" class="profile-img" />

                        <h3 style="color:white">@Model.Name</h3>
                        <p style="color:white">@Model.Email</p>
                    </div>
                    <div class="profile-body">
                        <p style="color:white"><strong style="color:white">Balance:</strong> @Model.Balance JD</p>
                        <!-- Edit Button -->
                        <a href="@Url.Action("Edit", "Home", new { id = Model.Userid })" class="btn btn-light">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-card {
        background: #ff4500; /* Red-orange base */
        background: -webkit-linear-gradient(top, #ff4500, #ff0000); /* Red to orange gradient */
        background: -o-linear-gradient(top, #ff4500, #ff0000);
        background: -moz-linear-gradient(top, #ff4500, #ff0000);
        background: linear-gradient(to bottom, #ff4500, #ff0000); /* Top to bottom gradient */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .profile-header {
        color: white; /* Make text color white */
        text-align: center;
    }

    .profile-body {
        color: white; /* Make text color white */
        text-align: center;
        margin-top: 10px;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-bottom: 15px;
    }

    /* Style for the Edit Button */
    .btn-light {
        background-color: white;
        color: #ff0000; /* Matching the red theme */
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
        border: none;
    }

        .btn-light:hover {
            background-color: #e60000;
            color: white;
        }
</style>
