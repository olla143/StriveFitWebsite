@model IEnumerable<StriveFitWebsite.Models.ViewModels.ScheduleViewModel>
@{
    ViewData["Title"] = "Schedules Page";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg spad" data-setbg="/HomeDesign/img/about-bread.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>SCHEDULE & CLASSES</h2>
                    <div class="breadcrumb-controls">
                        <a asp-action="Index" asp-controller="Home"><i class="fa fa-home"></i> Home</a>
                        <span>Schedule</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb End -->


<section class="dynamic-schedule-section spad" style="background-color: #151515; color: white;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-title">
                    <h2>Available Schedules</h2>
                </div>
            </div>
        </div>
        <div class="row" >
            <div class="col-lg-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color: white;">Trainer</th>
                            <th style="color: white;">Class Type</th>
                            <th style="color: white;">Exercise Routine</th>
                            <th style="color: white;">Start Time</th>
                            <th style="color: white;">End Time</th>
                            
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null)
                        {
                           
                            foreach (var schedule in Model)
                            {
                                <tr style="color: orangered;">
                                    <td>@schedule.TrainerName</td>
                                    <td>@schedule.Classtype</td>
                                    <td>@schedule.Exercisroutine</td>
                                    <td>@schedule.Starttime.ToString()</td>
                                    <td>@schedule.Endtime.ToString()</td>
                                    <td>
                                        <form asp-action="Enroll" asp-route-scheduleId="@schedule.ScheduleId" method="post">
                                            <button type="submit" class="btn btn-secondary">Enroll</button>
                                        </form>
                                    </td>
                                    
                                </tr>
                               
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No schedules available</td>
                            </tr>
                        }
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-info">
                                @TempData["Message"]
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

