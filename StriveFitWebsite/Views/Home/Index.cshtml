@model StriveFitWebsite.Models.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="hero-items owl-carousel">
        @foreach (var hero in Model.Homepages.Where(h => h.Sectionname.StartsWith("slider")))
        {
            <div class="single-hero-item set-bg" data-setbg="@Url.Content("~/Images/" + hero.Imageurl)" asp-append-version="true">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hero-text">
                                <h2>@hero.Headings</h2>
                                <h1>@hero.Descriptions</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Hero End -->
<!-- Feature Section Begin -->
<section class="feature-section">
    <div class="container-fluid">
        <div class="row">
            @foreach (var classes in Model.Homepages.Where(c => c.Sectionname == "class1" || c.Sectionname == "class2"))
            {
                <div class="col-md-6">
                    <div class="feature-item set-bg" data-setbg="@Url.Content("~/Images/" + classes.Imageurl)" asp-append-version="true">
                        <h3>@classes.Headings</h3>
                        <p>@classes.Descriptions</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<!-- Feature Section End -->
<!-- About Section Begin -->
<section class="home-about spad">
    <div class="container">
        <div class="row">
            @foreach (var welcome in Model.Homepages)
            {
                if (welcome.Sectionname == "welcome"){
                    <div class="col-lg-6">
                        <div class="about-text">

                            <h2>@welcome.Headings</h2>
                            <p class="short-details">
                                @welcome.Descriptions
                            </p>
                            <p class="long-details">
                                @welcome.Details
                            </p>

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-img">
                            <img src=@Url.Content("~/Images/" + welcome.Imageurl) asp-append-version="true" alt="">
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- About Section End -->
<!-- Classes Section Begin -->
<section class="classes-section">
   
    @foreach (var programs in Model.Homepages.Where(p => p.Sectionname == "programs1"))
    {
        <div class="class-title set-bg" data-setbg="@Url.Content("~/Images/" + programs.Imageurl)" asp-append-version="true">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 m-auto text-center">
                        <div class="section-title pl-lg-4 pr-lg-4 pl-0 pr-0">
                            <h2>@programs.Headings</h2>
                            <p>@programs.Descriptions</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container-fluid">
        <div class="row">
           
            @foreach (var programs in Model.Homepages.Where(p => p.Sectionname.StartsWith("programs") && p.Sectionname != "programs1"))
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="classes-item set-bg" data-setbg="@Url.Content("~/Images/" + programs.Imageurl)" asp-append-version="true">
                        <h4>@programs.Headings</h4>
                        <p>@programs.Descriptions</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Classes Section End -->
