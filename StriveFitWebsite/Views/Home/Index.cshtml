<!-- Price Plan Section Begin -->
<section class="price-section spad set-bg" data-setbg="/HomeDesign/img/price-bg.jpg">
    <div class="container">
        <!-- Message Display -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
        <!-- End Message Display -->
        @foreach (var pricingPlan in Model.Homepages.Where(p => p.Sectionname == "plan"))
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>@pricingPlan.Headings</h2>
                        <p>@pricingPlan.Descriptions</p>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            
                @foreach (var plan in Model.plans)
                {
                
                    <div class="col-lg-4">
                        <div class="single-price-plan">
                            <h4>@plan.Planname</h4>
                            <div class="price-plan">
                                <h2>@plan.Price <span>JD</span></h2>
                                <p>Monthly</p>
                            </div>
                            <ul>
                                @foreach (var feature in plan.Features)
                                {
                                    <li>@feature</li>
                                }
                            </ul>
                            <a class="primary-btn price-btn"
                               asp-action="CheckPlan"
                               asp-controller="Subscriptions"
                               asp-route-price="@plan.Price"
                               asp-route-planName="@plan.Planname">Get Started</a>
                        </div>
                    </div>
                
                }
               
        
        </div>
</section>
<!-- Price Plan Section End -->
<!-- Choseus Section Begin -->
<section class="chooseus-section spad">
    <div class="container">
        <!-- Main Section: 'why' -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    @foreach (var special in Model.Homepages.Where(h => h.Sectionname == "why"))
                    {
                        <h2>@special.Headings</h2>
                        <p>@special.Descriptions</p>
                    }
                </div>
            </div>
        </div>

        <!-- Subsections: 'why1', 'why2', etc. -->
        <div class="row">
            @foreach (var special in Model.Homepages.Where(h => h.Sectionname.StartsWith("why") && h.Sectionname != "why"))
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="choose-item">
                        <img src="@Url.Content("~/Images/" + special.Imageurl)" asp-append-version="true" alt="@special.Headings">
                        <h5>@special.Headings</h5>
                        <p>@special.Descriptions</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Choseus Section End -->
<!-- Video Section Begin -->
