@model IEnumerable<StriveFitWebsite.Models.Subscription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
<div class="content">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Renewalstatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paymentstatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Startdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enddate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Renewalstatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paymentstatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Startdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enddate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plan.Planname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Subscriptionid">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Subscriptionid">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Subscriptionid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>