@model StriveFitWebsite.Models.User
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Register</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="~/LoginAndRegisterDesign/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/css/main.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/images/fitness2.jpg');">
			<div class="wrap-login100">
				<form asp-action="Register" class="login100-form validate-form" enctype="multipart/form-data">
					<div class="login100-form-logo">
						<img src="~/images/fitness3.jpg" alt="Logo" class="logo-circle">
					</div>

					<span class="login100-form-title p-b-34 p-t-27">
						Sign Up
					</span>

					<div class="wrap-input100 validate-input" data-validate="Enter username">
						<input name="Name" class="input100" type="text" placeholder="Username">
						<span class="focus-input100" data-placeholder="&#xf207;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter Email">
						<input name="Email" class="input100" type="email" placeholder="Email">
						<span class="focus-input100" data-placeholder="&#xf0e0;"></span>
					</div>


					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<input class="input100" type="password" name="password" placeholder="Password">
						<span class="focus-input100" data-placeholder="&#xf191;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Upload an image">
						<label asp-for="ImageFile" class="control-label">Upload Image</label>
						<input asp-for="ImageFile" type="file" class="input100" />
						<span asp-validation-for="ImageFile" class="focus-input100 text-danger"></span>
					</div>

					<div class="container-login100-form-btn">
						<button type="submit" class="login100-form-btn">
							Sign Up
						</button>
					</div>

					<div class="text-center p-t-90">
						<a class="txt1" asp-action="Index" asp-controller="Home">
							Back To Home Page
						</a>
					</div>


					<div class="text-center p-t-90">
						<a class="txt1" asp-action="Login" asp-controller="LoginAndRegister">
							Do You Have an Account?
						</a>
					</div>
				</form>

			</div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>

	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/animsition/js/animsition.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/bootstrap/js/popper.js"></script>
	<script src="~/LoginAndRegisterDesign/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/LoginAndRegisterDesign/vendor/daterangepicker/daterangepicker.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/vendor/countdowntime/countdowntime.js"></script>
	<!--===============================================================================================-->
	<script src="~/LoginAndRegisterDesign/js/main.js"></script>


	<script src="https://ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.8.3.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>