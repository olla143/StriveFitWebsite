@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="content">
    <table class="table" id="example">
        <thead>
            <tr>
                <th>Member Name</th>
                <th>Trainer Name</th>
                <th>Plan Name</th>
                <th>Balance</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscription in ViewBag.SubscriptionDetails)
            {
                <tr>
                    <td>@subscription.MemberName</td>
                    <td>@subscription.TrainerName</td>
                    <td>@subscription.PlanName</td>
                    <td>@subscription.Balance</td>
                    <td>@subscription.StartDate.ToShortDateString()</td>
                    <td>@subscription.EndDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h4>Statistics</h4>
        <p><strong>Total Users:</strong> @ViewBag.TotalUsers</p>
        <p><strong>Members Enrolled in Schedule:</strong> @ViewBag.EnrolledUsers</p>
        <p><strong>Total Revenue:</strong> @ViewBag.TotalRevenue</p>
        <p><strong>Number of Active Subscriptions :</strong> @ViewBag.ActiveSubscription</p>
    </div>

</div>
@section Scripts {
    <link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>

        .dataTables_filter input {
             
            color: white !important; 
            border: 1px solid #495057 !important; 
        }

           
            .dataTables_filter input:focus {
                background-color: white !important;
                color: black !important; 
                border-color: red !important;
            }
       
        .table tbody tr {
            background-color: #151515 !important; 
            color: white; 
        }
            
            
            .table tbody tr:hover {
                background-color: #495057 !important; 
            }

        
        .dt-buttons button {
            background-color: red !important;
            color: white !important;
            border: none !important; 
        }

            .dt-buttons button:hover {
                background-color: darkred !important;
            }
    </style>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: 'Copy',
                        messageTop: `
                            Statistics:
                            Total Users: ${@ViewBag.TotalUsers}
                            Members Enrolled in Schedule: ${@ViewBag.EnrolledUsers}
                            Total Revenue: ${@ViewBag.TotalRevenue}
                            Number of Active Subscriptions: ${@ViewBag.ActiveSubscription}
                        `
                    },
                    {
                        extend: 'excelHtml5',
                        text: 'Excel',
                        messageTop: `
                            Statistics:
                            Total Users: ${@ViewBag.TotalUsers}
                            Members Enrolled in Schedule: ${@ViewBag.EnrolledUsers}
                            Total Revenue: ${@ViewBag.TotalRevenue}
                            Number of Active Subscriptions: ${@ViewBag.ActiveSubscription}
                        `
                    },
                    {
                        extend: 'csvHtml5',
                        text: 'CSV',
                        messageTop: `
                            Statistics:
                            Total Users: ${@ViewBag.TotalUsers}
                            Members Enrolled in Schedule: ${@ViewBag.EnrolledUsers}
                            Total Revenue: ${@ViewBag.TotalRevenue}
                            Number of Active Subscriptions: ${@ViewBag.ActiveSubscription}
                        `
                    },
                    {
                        extend: 'pdfHtml5',
                        text: 'PDF',
                        messageTop: `
                            Statistics:
                            Total Users: ${@ViewBag.TotalUsers}
                            Members Enrolled in Schedule: ${@ViewBag.EnrolledUsers}
                            Total Revenue: ${@ViewBag.TotalRevenue}
                            Number of Active Subscriptions: ${@ViewBag.ActiveSubscription}
                        `
                    }
                ]
            });
        });
    </script>

}



