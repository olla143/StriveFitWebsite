@model StriveFitWebsite.Models.User
@{
    ViewData["Title"] = "Profile Page";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>
    <div class="container-fluid position-relative d-flex p-0">
        
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3 text-center">
                        <img src="@Url.Content("~/Images/" + Model.Imagepath)" asp-append-version="true" alt="Profile Image" class="rounded-circle mb-3" style="width: 150px; height: 150px;" />
                        <h2 class="text-primary">@Model.Name</h2>
                        <p class="text-white mb-2">Email: @Model.Email</p>
                        <a asp-action="Edit" asp-controller="Admin" class="btn btn-primary py-3 w-100">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Profile End -->
    </div>

    
</body>


